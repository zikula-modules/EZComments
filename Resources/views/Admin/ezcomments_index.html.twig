<h3> {% trans %}Current Comments{% endtrans %}</h3>
<table id="tableToSort" class="table table-striped">
    <thead>
    <tr>
        <th id="id">{% trans %}id{% endtrans %}</th>
        <th id="moduleName">{% trans %}Module Name{% endtrans %}</th>
        <th id="subject">{% trans %}Subject{% endtrans %}</th>
        <th id="comment">{% trans %}Comment{% endtrans %}</th>
        <th id="date">{% trans %}Date{% endtrans %}</th>
        <th id="name">{% trans %}Name{% endtrans %}</th>
        <th id="name">{% trans %}Status{% endtrans %}</th>
        <th>{% trans %}Actions{% endtrans %}</th>
    </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr id="{{ item.id }}">
            <td id="id_{{ item.id }}">{{ item.id }}</td>
            <td id="modname_{{ item.id }}">{{ item.modname }}</td>
            <td id="subject_{{ item.id }}">{{ item.subject }}</td>
            <td id="comment_{{ item.id }}">{{ item.comment|u.truncate(30) }}</td>
            <td id="date_{{ item.id }}">{{ item.date|date("m/d/Y") }}</td>
            <td id="name_{{ item.id }}">{{ item.anonname }}</td>
            <td id="status_{{ item.id }}">{% if item.status %}<span class="fas fa-ban"></span>{% endif %}</td>
            <td id="actions"><a href="{{ item.url }}#itemComment_{{ item.id }}" class="far fa-eye" title="View Comment in Context"></a>&nbsp;
                <span id="edit_{{ item.id }}" class="fas fa-pencil-alt" title="Edit Comment"></span>
                <span id="delete_{{ item.id }}" class="far fa-trash-alt" title="Delete Comment"></span>
                <a href="{{ path('zikulaezcommentsmodule_admin_deleteall', {comment: item.id}) }}" class="fas fa-trash-alt" title="Delete All Users Comments" onclick="return confirm('Are you sure you want to delete all comments by this user?')"></a>
                <a href="{{ path('zikulaezcommentsmodule_admin_blockcomment', {comment: item.id}) }}" class="far fa-hand-paper" title="Ban/Unban Comment"></a>
                <a href="{{ path('zikulaezcommentsmodule_admin_blockuser', {comment: item.id}) }}" class="fas fa-ban" title="Ban/Unban User"></a>
                </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
